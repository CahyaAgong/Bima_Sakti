<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layanan_webview.e_ajuan.E_ajuan">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:hint="NIK Pengaju"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Spinner
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="40dp"
            android:entries="@array/german_familienname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>


        <EditText
            android:layout_marginTop="40dp"
            android:hint="Lokasi"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginTop="40dp"
            android:hint="Volume Bangunan"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />


        <EditText
            android:layout_marginTop="40dp"
            android:hint="Catatan"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginStart="18dp"
            android:layout_marginTop="40dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/slect_image1"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="13dp"
                android:text="Upload File"/>
            <TextView
                android:id="@+id/tv_nama_image1"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada File Yang Dipilih"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/slect_image2"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="13dp"
                android:text="Upload File"/>
            <TextView
                android:id="@+id/tv_nama_image2"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada File Yang Dipilih"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginStart="18dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/slect_image3"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:textSize="13dp"
                android:text="Upload File"/>
            <TextView
                android:id="@+id/tv_nama_image3"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidak ada File Yang Dipilih"/>

        </LinearLayout>

        <ImageView
            android:layout_marginEnd="40dp"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:id="@+id/kirim_berita"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_menu_send"/>


    </LinearLayout>

</ScrollView>