<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_putih"
    tools:context=".MainActivity">

   <androidx.percentlayout.widget.PercentRelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <LinearLayout
           android:orientation="vertical"
           android:layout_height="200dp"
           percent:layout_widthPercent="100%"
           android:id="@+id/banner_atas">
           <!--<include layout="@layout/banner_main" />-->
           <androidx.viewpager.widget.ViewPager
               android:id="@+id/pager"
               android:layout_marginEnd="0dp"
               android:layout_marginTop="0dp"
               android:layout_marginStart="0dp"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:layout_alignParentTop="true" />
       </LinearLayout>

       <LinearLayout
           android:layout_below="@id/banner_atas"
           android:id="@+id/marqueeText"
           android:background="@color/birutua"
           percent:layout_widthPercent="100%"
           android:layout_height="wrap_content">
           <TextView
               android:id="@+id/running_text1"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:ellipsize="marquee"
               android:focusable="auto"
               android:focusableInTouchMode="true"
               android:gravity="center"
               android:marqueeRepeatLimit="marquee_forever"
               android:singleLine="true"
               android:text="DIRGAHAYU REPUBLIK INDONESIA YANG KE 74 - SDM UNGGUL INDONESIA MAJU "
               android:textSize="15dp"
               android:padding="4dp"
               android:textColor="@color/oren"
               android:textStyle="bold|italic"
               tools:ignore="HardcodedText" />
       </LinearLayout>

       <androidx.cardview.widget.CardView
           android:id="@+id/card_id"
           android:layout_below="@id/marqueeText"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginStart="16dp"
           android:layout_marginEnd="16dp"
           android:layout_marginTop="9dp"
           android:padding="10dp"
           android:elevation="18dp"
           app:cardCornerRadius="8dp">

           <LinearLayout
               android:background="@color/putih"
               android:orientation="horizontal"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <LinearLayout
                   android:padding="10dp"
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <de.hdodenhof.circleimageview.CircleImageView
                       android:id="@+id/profile_image"
                       android:layout_marginTop="5dp"
                       android:onClick="foto_click"
                       android:layout_marginStart="5dp"
                       android:layout_marginEnd="1dp"
                       android:layout_marginBottom="10dp"
                       android:layout_width="100dp"
                       android:layout_height="100dp"
                       app:civ_border_color="#FFB300"
                       app:civ_border_width="1dp"
                       android:src="@drawable/marwanhamami"/>
               </LinearLayout>

               <LinearLayout
                   android:orientation="vertical"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <TextView
                       android:id="@+id/txt_nama_user"
                       android:layout_marginEnd="0dp"
                       android:layout_marginTop="8dp"
                       android:textColor="@color/birutua"
                       android:textSize="17dp"
                       android:textStyle="bold"
                       android:paddingBottom="10dp"
                       android:paddingTop="10dp"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="H.MARWAN HAMAMI"/>


                   <LinearLayout
                       android:orientation="horizontal"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="45dp"
                           android:layout_height="60dp"
                           android:onClick="profil"
                           android:layout_marginTop="1dp"
                           android:layout_marginEnd="10dp"
                           android:layout_marginBottom="15dp"
                           android:src="@drawable/ic_profile"/>
                       <ImageView
                           android:layout_width="60dp"
                           android:layout_height="60dp"
                           android:id="@+id/set"
                           android:layout_marginTop="0dp"
                           android:layout_marginEnd="10dp"
                           android:src="@drawable/ic_setting"/>
                       <ImageView
                           android:layout_width="50dp"
                           android:layout_height="50dp"
                           android:onClick="logout"
                           android:layout_marginTop="9dp"
                           android:layout_marginEnd="10dp"
                           android:src="@drawable/ic_logout"/>
                   </LinearLayout>
               </LinearLayout>

           </LinearLayout>

       </androidx.cardview.widget.CardView>

       <LinearLayout
           android:id="@+id/menu1"
           android:layout_below="@id/card_id"
           android:layout_marginTop="20dp"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <androidx.percentlayout.widget.PercentRelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <androidx.cardview.widget.CardView
                   android:id="@+id/card_info"
                   android:layout_marginBottom="10dp"
                   app:cardCornerRadius="22dp"
                   android:elevation="28dp"
                   android:onClick="infokami"
                   android:layout_height="wrap_content"
                   percent:layout_widthPercent="25%">
                   <LinearLayout
                       android:padding="13.5dp"
                       android:orientation="vertical"
                       android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_gravity="center"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_pemda"/>
                       <TextView
                           android:textSize="11dp"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Info Kami"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/card_rilis"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="3dp"
                   android:layout_marginLeft="5dp"
                   android:layout_marginBottom="10dp"
                   android:layout_toRightOf="@id/card_info"
                   android:elevation="18dp"
                   android:onClick="layanan"
                   app:cardCornerRadius="22dp"
                   percent:layout_widthPercent="25%">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:orientation="vertical"
                       android:padding="13.5dp">

                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_pelayanan" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="E-Layanan"
                           android:textSize="11dp"
                           android:textStyle="bold" />
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:background="@drawable/back_menu"
                   android:id="@+id/card_diskusii"
                   android:layout_marginStart="3dp"
                   android:onClick="skpd"
                   android:layout_toRightOf="@id/card_rilis"
                   android:layout_marginBottom="10dp"
                   app:cardCornerRadius="22dp"
                   android:elevation="28dp"
                   percent:layout_widthPercent="25%"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:padding="13.5dp"
                       android:orientation="vertical"
                       android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_kepemerintahan"/>
                       <TextView
                           android:textSize="11dp"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="E-SKPD"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:background="@drawable/back_menu"
                   android:id="@+id/card_rank"
                   android:layout_toRightOf="@id/card_diskusii"
                   android:layout_marginStart="3dp"
                   android:layout_marginBottom="10dp"
                   app:cardCornerRadius="22dp"
                   android:elevation="28dp"
                   android:onClick="cek_pbb"
                   percent:layout_widthPercent="25%"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:padding="13.5dp"
                       android:orientation="vertical"
                       android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_gravity="center"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_ambulan"/>

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="E-Ambulan"
                           android:textSize="11dp"
                           android:textStyle="bold" />
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

           </androidx.percentlayout.widget.PercentRelativeLayout>

       </LinearLayout>
       <LinearLayout
           android:id="@+id/menu2"
           android:layout_below="@id/menu1"
           android:orientation="horizontal"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <androidx.percentlayout.widget.PercentRelativeLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <androidx.cardview.widget.CardView
                   android:id="@+id/diskusi_card"
                   android:layout_marginBottom="10dp"
                   app:cardCornerRadius="22dp"
                   android:elevation="28dp"
                   android:onClick="ambulance"
                   android:layout_height="wrap_content"
                   percent:layout_widthPercent="25%">
                   <LinearLayout
                       android:padding="13.5dp"
                       android:orientation="vertical"
                       android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_gravity="center"
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_tv"/>
                       <TextView
                           android:textSize="11dp"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="KAMI TV"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:id="@+id/wisata_card"
                   android:layout_height="wrap_content"
                   android:layout_marginStart="3dp"
                   android:onClick="damkar"
                   android:layout_marginLeft="5dp"
                   android:layout_marginBottom="10dp"
                   android:layout_toRightOf="@id/diskusi_card"
                   android:elevation="18dp"
                   app:cardCornerRadius="22dp"
                   percent:layout_widthPercent="25%">

                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_gravity="center"
                       android:orientation="vertical"
                       android:padding="13.5dp">

                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_diskusi" />

                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:text="Diskusi"
                           android:textSize="11dp"
                           android:textStyle="bold" />
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <androidx.cardview.widget.CardView
                   android:background="@drawable/back_menu"
                   android:id="@+id/radio_card"
                   android:onClick="praja"
                   android:layout_marginStart="3dp"
                   android:layout_toRightOf="@id/card_diskusi"
                   android:layout_marginBottom="10dp"
                   app:cardCornerRadius="22dp"
                   android:elevation="28dp"
                   percent:layout_widthPercent="25%"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:padding="13.5dp"
                       android:orientation="vertical"
                       android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:layout_gravity="center"
                           android:src="@drawable/ic_damkar"/>
                       <TextView
                           android:textSize="11dp"
                           android:textStyle="bold"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="E-Damkar"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
               <!--<android.support.v7.widget.CardView-->
                   <!--android:background="@drawable/back_menu"-->
                   <!--android:id="@+id/card_diskusi"-->
                   <!--android:onClick="diskusi"-->
                   <!--android:layout_toRightOf="@id/radio_card"-->
                   <!--android:layout_marginStart="3dp"-->
                   <!--android:layout_marginBottom="10dp"-->
                   <!--app:cardCornerRadius="22dp"-->
                   <!--android:elevation="28dp"-->
                   <!--percent:layout_widthPercent="25%"-->
                   <!--android:layout_height="wrap_content">-->
                   <!--<LinearLayout-->
                       <!--android:padding="13.5dp"-->
                       <!--android:orientation="vertical"-->
                       <!--android:layout_gravity="center_horizontal|center_vertical"-->
                       <!--android:layout_width="wrap_content"-->
                       <!--android:layout_height="wrap_content">-->
                       <!--<ImageView-->
                           <!--android:layout_width="40dp"-->
                           <!--android:layout_height="40dp"-->
                           <!--android:src="@drawable/ic_diskusi"/>-->
                       <!--<TextView-->
                           <!--android:textSize="11dp"-->
                           <!--android:textStyle="bold"-->
                           <!--android:layout_gravity="center"-->
                           <!--android:layout_width="wrap_content"-->
                           <!--android:layout_height="wrap_content"-->
                           <!--android:text="Diskusi"/>-->
                   <!--</LinearLayout>-->
               <!--</android.support.v7.widget.CardView>-->

               <androidx.cardview.widget.CardView
                   android:background="@drawable/back_menu"
                   android:id="@+id/card_diskusi"
                   android:layout_toRightOf="@id/wisata_card"
                   android:layout_marginStart="3dp"
                   android:layout_marginBottom="10dp"
                   app:cardCornerRadius="22dp"
                   android:onClick="wisataku"
                   android:elevation="28dp"
                   percent:layout_widthPercent="25%"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:padding="13.5dp"
                       android:orientation="vertical"
                       android:layout_gravity="center_horizontal|center_vertical"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content">
                       <ImageView
                           android:layout_width="40dp"
                           android:layout_height="40dp"
                           android:src="@drawable/ic_bpbd"/>
                       <TextView
                           android:textSize="11dp"
                           android:textStyle="bold"
                           android:layout_gravity="center"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Wisataku"/>
                   </LinearLayout>
               </androidx.cardview.widget.CardView>
           </androidx.percentlayout.widget.PercentRelativeLayout>

       </LinearLayout>
   </androidx.percentlayout.widget.PercentRelativeLayout>



</ScrollView>