<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parent"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true">

    <androidx.percentlayout.widget.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <EditText
            android:layout_marginTop="50dp"
            android:layout_marginBottom="90dp"
            android:hint="Masukkan Nomor Verifikasi"
            android:id="@+id/txt_nomor_verifikasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <EditText
            android:visibility="invisible"
            android:layout_marginTop="50dp"
            android:layout_marginBottom="90dp"
            android:layout_below="@id/txt_nomor_verifikasi"
            android:id="@+id/txt_random_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

        <LinearLayout
            android:layout_below="@id/txt_nomor_verifikasi"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/tutup_popup_ver"
                android:textColor="#fff"
                android:background="@drawable/bg_ui"
                android:text="Tutup"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <Button
                android:layout_marginStart="10dp"
                android:id="@+id/kirim_verifikasi"
                android:textColor="#fff"
                android:background="@drawable/bg_ui"
                android:text="Kirim"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

    </androidx.percentlayout.widget.PercentRelativeLayout>
</androidx.cardview.widget.CardView>