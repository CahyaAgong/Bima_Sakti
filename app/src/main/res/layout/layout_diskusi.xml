<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:percent="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/gambar_diskusi_list"
                android:src="@drawable/kartun"
                android:layout_marginBottom="10dp"
                android:layout_width="150dp"
                android:layout_height="100dp" />
           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <androidx.percentlayout.widget.PercentRelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/kategori_diskusi"
                       android:background="#EE3137"
                       android:padding="5dp"
                       android:textColor="@color/colorWhite"
                       android:layout_marginTop="15dp"
                       android:layout_marginStart="10dp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:textSize="12dp"
                       android:text="kategori"
                       />

                   <TextView
                       android:layout_toRightOf="@id/kategori_diskusi"
                       android:id="@+id/created_date"
                       android:padding="5dp"
                       android:layout_marginTop="15dp"
                       android:layout_marginStart="2dp"
                       android:layout_height="wrap_content"
                       android:layout_width="wrap_content"
                       android:textSize="10dp"
                       android:text="Tanggal"
                       />


               </androidx.percentlayout.widget.PercentRelativeLayout>
               <TextView
                   android:id="@+id/judul_diskusi"
                   android:layout_marginTop="5dp"
                   android:layout_marginStart="10dp"
                   android:layout_width="wrap_content"
                   android:text="Judul"
                   android:textColor="#000"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   android:layout_height="wrap_content" />

               <androidx.percentlayout.widget.PercentRelativeLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">
                   <TextView
                       android:id="@+id/penulis_diskusi"
                       android:layout_marginTop="5dp"
                       android:layout_marginStart="10dp"
                       android:layout_width="wrap_content"
                       android:padding="5dp"
                       android:text="Penulis"
                       android:drawablePadding="5dp"
                       android:textSize="11dp"
                       android:layout_height="wrap_content" />

                   <TextView
                       android:layout_alignParentRight="true"
                       android:id="@+id/txt_comment"
                       android:padding="5dp"
                       android:layout_marginTop="5dp"
                       android:layout_marginEnd="30dp"
                       android:layout_height="wrap_content"
                       android:drawablePadding="5dp"
                       android:layout_width="wrap_content"
                       android:textSize="10dp"
                       android:text="Comment"
                       />
               </androidx.percentlayout.widget.PercentRelativeLayout>r
               <TextView
                   android:id="@+id/id_diskusi"
                   android:visibility="gone"
                   android:layout_marginTop="5dp"
                   android:layout_marginStart="10dp"
                   android:layout_width="wrap_content"
                   android:text="Penulis"
                   android:drawablePadding="5dp"
                   android:textSize="11dp"
                   android:layout_height="wrap_content" />
           </LinearLayout>
    </LinearLayout>
    
</androidx.cardview.widget.CardView>